{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["app/components/*"],
      "@/lib/*": ["app/lib/*"],
      "@shared/*": ["shared/*"]
    },
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "incremental": true,
    "plugins": [{ "name": "next" }]
  },
  "include": ["app", "components", "lib", "shared", "server", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
